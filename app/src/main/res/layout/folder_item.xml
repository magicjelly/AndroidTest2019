<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView android:id="@+id/folder_icon"
               android:background="@color/colorPrimaryDark"
               android:layout_width="@dimen/appSize"
               android:layout_height="@dimen/appSize"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toTopOf="@+id/folder_name"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"/>
    <TextView android:id="@+id/folder_name"
              android:background="@color/colorPrimary"
              android:layout_width="@dimen/appNameWidth"
              android:layout_height="@dimen/appNameHeight"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:gravity="center"
              android:text="FOLDER"
              app:layout_constraintTop_toBottomOf="@id/folder_icon"
              app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>