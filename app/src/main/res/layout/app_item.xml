<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_width="@dimen/appContainerWidth"
        android:layout_height="@dimen/appContainerHeight">
    <ImageView android:id="@+id/app_icon"
               android:background="@drawable/circle"
               android:layout_width="@dimen/appIconSize"
               android:layout_height="@dimen/appIconSize"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toTopOf="@id/app_name"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"/>
    <TextView android:id="@+id/app_name"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/appNameHeight"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:gravity="center"
              android:textSize="@dimen/textSize"
              app:layout_constraintTop_toBottomOf="@id/app_icon"
              app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>